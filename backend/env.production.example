# =====================================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# =====================================================

NODE_ENV=production
PORT=5000
API_PREFIX=/api/v1

# Database Configuration
DB_HOST=your-production-db-host
DB_PORT=3306
DB_NAME=antique_store
DB_USER=your-db-user
DB_PASSWORD=your-secure-password
DB_DIALECT=mysql
DB_SSL=true

# JWT Secret Keys (MUST CHANGE THESE!)
JWT_SECRET=change-this-to-a-very-long-random-string-in-production
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=change-this-refresh-secret-as-well
JWT_REFRESH_EXPIRE=30d

# CORS Configuration
CORS_ORIGIN=https://your-frontend-domain.com

# File Upload
MAX_FILE_SIZE=5242880

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Security
BCRYPT_ROUNDS=12

# Payment Gateway (Production)
VNPAY_TMN_CODE=your_production_vnpay_code
VNPAY_HASH_SECRET=your_production_vnpay_secret
MOMO_PARTNER_CODE=your_production_momo_code
MOMO_ACCESS_KEY=your_production_momo_key

# Cloudinary (for image storage)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Logging Configuration
LOG_LEVEL=error
# Production should use error or warn level

# Sentry Configuration (Production Error Tracking)
# REQUIRED for production error monitoring
SENTRY_DSN=https://your-sentry-dsn@o0.ingest.sentry.io/0
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.2
# Lower sample rate in production to reduce costs



