# =====================================================
# ENVIRONMENT CONFIGURATION
# Copy this file to .env and update with your values
# =====================================================

# Server Configuration
NODE_ENV=development
PORT=5000
API_PREFIX=/api/v1

# Database Configuration (MySQL)
DB_HOST=localhost
DB_PORT=3306
DB_NAME=antique_store
DB_USER=root
DB_PASSWORD=your_password
DB_DIALECT=mysql

# Database Configuration (PostgreSQL) - Alternative
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=antique_store
# DB_USER=postgres
# DB_PASSWORD=your_password
# DB_DIALECT=postgres

# JWT Secret Keys
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your-refresh-token-secret
JWT_REFRESH_EXPIRE=30d

# CORS Configuration
CORS_ORIGIN=http://localhost:5173
# For multiple origins: http://localhost:5173,http://localhost:3000

# File Upload
MAX_FILE_SIZE=5242880
# 5MB in bytes

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Security
BCRYPT_ROUNDS=10

# Payment Gateway (Mock for now)
VNPAY_TMN_CODE=your_vnpay_code
VNPAY_HASH_SECRET=your_vnpay_secret
MOMO_PARTNER_CODE=your_momo_code
MOMO_ACCESS_KEY=your_momo_key

# Email Service (Optional - for future)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Cloudinary (Optional - for image upload)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Redis (Optional - for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Logging Configuration
LOG_LEVEL=info
# Levels: error, warn, info, http, debug

# Sentry Configuration (Production Error Tracking)
# Get your DSN from https://sentry.io/
SENTRY_DSN=
# Example: SENTRY_DSN=https://examplePublicKey@o0.ingest.sentry.io/0
# Leave empty to disable Sentry
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=1.0



