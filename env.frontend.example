# =====================================================
# FRONTEND ENVIRONMENT CONFIGURATION
# =====================================================
# Copy this file to .env.local and update with your values

# =====================================================
# API Configuration
# =====================================================

# Backend API URL
# Development (HTTP):
VITE_API_URL=http://localhost:5000/api/v1

# Development (HTTPS):
# VITE_API_URL=https://localhost:5000/api/v1

# Production:
# VITE_API_URL=https://api.yourdomain.com/api/v1

# =====================================================
# HTTPS Configuration (Development)
# =====================================================

# Enable HTTPS for Vite dev server
VITE_ENABLE_HTTPS=false
# Set to 'true' to enable HTTPS
# Requires SSL certificates in backend/certs/

# =====================================================
# Proxy Configuration (Optional)
# =====================================================

# Use Vite proxy to avoid CORS issues
VITE_USE_PROXY=false
# If true, API calls will go through Vite proxy
# Frontend: http://localhost:5173/api/v1
# Proxied to: VITE_API_URL

# =====================================================
# OAuth Configuration
# =====================================================

# Google OAuth
VITE_GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com

# Facebook OAuth
VITE_FACEBOOK_APP_ID=your-facebook-app-id

# =====================================================
# Other Configuration
# =====================================================

# App Environment
VITE_APP_ENV=development
# development | staging | production

# App Name
VITE_APP_NAME="Antique Store"

# Enable Debug Mode
VITE_DEBUG=true

# =====================================================
# INSTRUCTIONS
# =====================================================

# 1. Copy this file:
#    cp env.frontend.example .env.local

# 2. Update VITE_API_URL based on your setup:
#    - HTTP (default): http://localhost:5000/api/v1
#    - HTTPS (với SSL): https://localhost:5000/api/v1

# 3. Enable HTTPS (optional):
#    a. Tạo SSL certificates:
#       cd backend/scripts
#       ./generate-ssl-cert.sh (Linux/Mac)
#       ./generate-ssl-cert.ps1 (Windows)
#    
#    b. Update backend .env:
#       ENABLE_SSL=true
#    
#    c. Update frontend .env.local:
#       VITE_ENABLE_HTTPS=true
#       VITE_API_URL=https://localhost:5000/api/v1

# 4. Start servers:
#    Backend: cd backend && npm run dev
#    Frontend: npm run dev

# =====================================================

